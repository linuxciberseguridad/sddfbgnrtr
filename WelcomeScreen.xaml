<Window x:Class="BWP.Installer.UI.WelcomeScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BWP.Installer.UI"
        mc:Ignorable="d"
        Title="BWP Enterprise - Instalación" 
        Height="650" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#006CBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#0078D4"/>
            <Setter Property="BorderBrush" Value="#0078D4"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1A237E" Offset="0.0"/>
            <GradientStop Color="#283593" Offset="0.5"/>
            <GradientStop Color="#303F9F" Offset="1.0"/>
        </LinearGradientBrush>
        
        <Style x:Key="FeatureItemStyle" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="CheckIconStyle" TargetType="Path">
            <Setter Property="Fill" Value="#4CAF50"/>
            <Setter Property="Stretch" Value="Uniform"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
    </Window.Resources>
    
    <Border CornerRadius="10" 
            Background="{StaticResource BackgroundGradient}"
            BorderBrush="#FFFFFF20"
            BorderThickness="1"
            Effect="{StaticResource DropShadowEffect}">
        
        <Grid>
            <!-- Header con logo y título -->
            <Border Height="80" 
                    Background="#00000040"
                    CornerRadius="10,10,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Logo -->
                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center"
                                Margin="30,0,0,0">
                        <Canvas Width="40" Height="40">
                            <!-- Shield Icon -->
                            <Path Fill="#4FC3F7" Data="M20,2 L38,10 L38,28 L20,38 L2,28 L2,10 Z"/>
                            <Path Fill="#FFFFFF" Data="M20,12 L28,16 L20,20 L12,16 Z M20,20 L28,24 L20,28 L12,24 Z"/>
                        </Canvas>
                        <TextBlock Text="BWP" 
                                   Foreground="White" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Margin="10,0,0,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="ENTERPRISE" 
                                   Foreground="#4FC3F7" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Margin="2,5,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Título -->
                    <TextBlock Grid.Column="1" 
                               Text="Instalación de BWP Enterprise Security Suite"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Medium"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    
                    <!-- Versión -->
                    <TextBlock Grid.Column="2"
                               Text="v1.0.0"
                               Foreground="#CCCCCC"
                               FontSize="12"
                               Margin="0,0,30,0"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
            
            <!-- Contenido principal -->
            <Grid Margin="30,100,30,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Mensaje de bienvenida -->
                <StackPanel Grid.Row="0">
                    <TextBlock Text="Bienvenido al instalador de BWP Enterprise"
                               Foreground="White"
                               FontSize="24"
                               FontWeight="Bold"
                               TextWrapping="Wrap"/>
                    
                    <TextBlock Text="La solución de seguridad empresarial más avanzada"
                               Foreground="#CCCCCC"
                               FontSize="14"
                               Margin="0,5,0,20"
                               TextWrapping="Wrap"/>
                </StackPanel>
                
                <!-- Características principales -->
                <Border Grid.Row="1" 
                        Background="#00000030" 
                        CornerRadius="8"
                        Margin="0,20,0,30"
                        Padding="20">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Características principales:"
                                       Foreground="#4FC3F7"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,15"/>
                            
                            <!-- Protección de endpoints -->
                            <StackPanel Style="{StaticResource FeatureItemStyle}">
                                <Path Style="{StaticResource CheckIconStyle}"
                                      Data="M9,16.17 L4.83,12 L3.41,13.41 L9,19 L21,7 L19.59,5.59 Z"/>
                                <StackPanel>
                                    <TextBlock Text="Protección avanzada de endpoints"
                                               Foreground="White"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Detección y respuesta en tiempo real contra malware, ransomware y amenazas avanzadas"
                                               Foreground="#CCCCCC"
                                               FontSize="12"
                                               TextWrapping="Wrap"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Monitoreo del sistema -->
                            <StackPanel Style="{StaticResource FeatureItemStyle}">
                                <Path Style="{StaticResource CheckIconStyle}"
                                      Data="M9,16.17 L4.83,12 L3.41,13.41 L9,19 L21,7 L19.59,5.59 Z"/>
                                <StackPanel>
                                    <TextBlock Text="Monitoreo integral del sistema"
                                               Foreground="White"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Sensores en tiempo real para procesos, archivos, red y registro de Windows"
                                               Foreground="#CCCCCC"
                                               FontSize="12"
                                               TextWrapping="Wrap"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Machine Learning -->
                            <StackPanel Style="{StaticResource FeatureItemStyle}">
                                <Path Style="{StaticResource CheckIconStyle}"
                                      Data="M9,16.17 L4.83,12 L3.41,13.41 L9,19 L21,7 L19.59,5.59 Z"/>
                                <StackPanel>
                                    <TextBlock Text="Detección con Machine Learning"
                                               Foreground="White"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Modelos ONNX para detectar comportamientos anómalos y amenazas desconocidas"
                                               Foreground="#CCCCCC"
                                               FontSize="12"
                                               TextWrapping="Wrap"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Cloud integration -->
                            <StackPanel Style="{StaticResource FeatureItemStyle}">
                                <Path Style="{StaticResource CheckIconStyle}"
                                      Data="M9,16.17 L4.83,12 L3.41,13.41 L9,19 L21,7 L19.59,5.59 Z"/>
                                <StackPanel>
                                    <TextBlock Text="Integración con la nube"
                                               Foreground="White"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Panel SOC centralizado, correlación de amenazas y respuesta automatizada (SOAR)"
                                               Foreground="#CCCCCC"
                                               FontSize="12"
                                               TextWrapping="Wrap"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Auto-protección -->
                            <StackPanel Style="{StaticResource FeatureItemStyle}">
                                <Path Style="{StaticResource CheckIconStyle}"
                                      Data="M9,16.17 L4.83,12 L3.41,13.41 L9,19 L21,7 L19.59,5.59 Z"/>
                                <StackPanel>
                                    <TextBlock Text="Auto-protección y anti-tampering"
                                               Foreground="White"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Protección contra manipulación, desinstalación no autorizada y rootkits"
                                               Foreground="#CCCCCC"
                                               FontSize="12"
                                               TextWrapping="Wrap"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Dashboard local -->
                            <StackPanel Style="{StaticResource FeatureItemStyle}">
                                <Path Style="{StaticResource CheckIconStyle}"
                                      Data="M9,16.17 L4.83,12 L3.41,13.41 L9,19 L21,7 L19.59,5.59 Z"/>
                                <StackPanel>
                                    <TextBlock Text="Dashboard local en tiempo real"
                                               Foreground="White"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Interfaz WPF/WinUI3 para monitorear el estado de seguridad del endpoint"
                                               Foreground="#CCCCCC"
                                               FontSize="12"
                                               TextWrapping="Wrap"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
                
                <!-- Requisitos del sistema -->
                <Border Grid.Row="2" 
                        Background="#00000020" 
                        CornerRadius="6"
                        Padding="15"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Requisitos del sistema:"
                                   Foreground="#4FC3F7"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>
                        
                        <WrapPanel>
                            <TextBlock Text="• Windows 10/11 o Windows Server 2016+" 
                                       Foreground="#CCCCCC" 
                                       FontSize="12"
                                       Margin="0,0,20,0"/>
                            <TextBlock Text="• 2 GB RAM mínimo" 
                                       Foreground="#CCCCCC" 
                                       FontSize="12"
                                       Margin="0,0,20,0"/>
                            <TextBlock Text="• 500 MB espacio en disco" 
                                       Foreground="#CCCCCC" 
                                       FontSize="12"
                                       Margin="0,0,20,0"/>
                            <TextBlock Text="• .NET Framework 4.8+" 
                                       Foreground="#CCCCCC" 
                                       FontSize="12"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>
                
                <!-- Botones de navegación -->
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Checkbox de términos -->
                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center">
                        <CheckBox x:Name="AcceptTermsCheckBox"
                                  Foreground="White"
                                  FontSize="12"
                                  VerticalAlignment="Center"
                                  Checked="AcceptTermsCheckBox_Checked"
                                  Unchecked="AcceptTermsCheckBox_Unchecked">
                            <TextBlock>
                                <Run Text="Acepto los "/>
                                <Hyperlink x:Name="TermsLink" 
                                           Foreground="#4FC3F7"
                                           Click="TermsLink_Click">
                                    términos y condiciones
                                </Hyperlink>
                                <Run Text=" de uso"/>
                            </TextBlock>
                        </CheckBox>
                    </StackPanel>
                    
                    <!-- Botones -->
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Button x:Name="CancelButton"
                                Style="{StaticResource SecondaryButton}"
                                Content="Cancelar"
                                Width="120"
                                Margin="0,0,10,0"
                                Click="CancelButton_Click"/>
                        
                        <Button x:Name="NextButton"
                                Style="{StaticResource ModernButton}"
                                Content="Siguiente →"
                                Width="120"
                                IsEnabled="False"
                                Click="NextButton_Click"/>
                    </StackPanel>
                </Grid>
            </Grid>
            
            <!-- Barra de progreso (invisible en pantalla de bienvenida) -->
            <Border x:Name="ProgressBarContainer"
                    Height="4"
                    VerticalAlignment="Bottom"
                    Background="#00000020"
                    Visibility="Hidden">
                <Rectangle x:Name="ProgressBar" 
                           HorizontalAlignment="Left" 
                           Width="0"
                           Fill="#4FC3F7"
                           RadiusX="2" 
                           RadiusY="2"/>
            </Border>
            
            <!-- Close button -->
            <Button x:Name="CloseButton"
                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                    Width="30" 
                    Height="30"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"
                    Margin="0,15,15,0"
                    Click="CloseButton_Click">
                <Path Fill="#CCCCCC" 
                      Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12z"/>
            </Button>
        </Grid>
    </Border>
</Window>