<Window x:Class="BWP.Installer.UI.TenantTokenScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BWP.Installer.UI"
        mc:Ignorable="d"
        Title="BWP Enterprise - Token del Tenant" 
        Height="650" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#006CBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#0078D4"/>
            <Setter Property="BorderBrush" Value="#0078D4"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1A237E" Offset="0.0"/>
            <GradientStop Color="#283593" Offset="0.5"/>
            <GradientStop Color="#303F9F" Offset="1.0"/>
        </LinearGradientBrush>
        
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#FFFFFF10"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4FC3F7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="#4FC3F7"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"
                                          Background="Transparent"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#81D4FA"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#29B6F6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CCCCCC20"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="InfoPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="#01579B30"/>
            <Setter Property="BorderBrush" Value="#4FC3F7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,10"/>
        </Style>
        
        <Style x:Key="StepIndicatorStyle" TargetType="Border">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Background" Value="#4FC3F7"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        
        <Style x:Key="StepLineStyle" TargetType="Border">
            <Setter Property="Height" Value="2"/>
            <Setter Property="Background" Value="#4FC3F7"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
    </Window.Resources>
    
    <Border CornerRadius="10" 
            Background="{StaticResource BackgroundGradient}"
            BorderBrush="#FFFFFF20"
            BorderThickness="1"
            Effect="{StaticResource DropShadowEffect}">
        
        <Grid>
            <!-- Header con logo y título -->
            <Border Height="80" 
                    Background="#00000040"
                    CornerRadius="10,10,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Logo -->
                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center"
                                Margin="30,0,0,0">
                        <Canvas Width="40" Height="40">
                            <Path Fill="#4FC3F7" Data="M20,2 L38,10 L38,28 L20,38 L2,28 L2,10 Z"/>
                            <Path Fill="#FFFFFF" Data="M20,12 L28,16 L20,20 L12,16 Z M20,20 L28,24 L20,28 L12,24 Z"/>
                        </Canvas>
                        <TextBlock Text="BWP" 
                                   Foreground="White" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Margin="10,0,0,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="ENTERPRISE" 
                                   Foreground="#4FC3F7" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Margin="2,5,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Título -->
                    <TextBlock Grid.Column="1" 
                               Text="Configuración del Tenant"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Medium"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    
                    <!-- Versión -->
                    <TextBlock Grid.Column="2"
                               Text="v1.0.0"
                               Foreground="#CCCCCC"
                               FontSize="12"
                               Margin="0,0,30,0"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
            
            <!-- Indicador de progreso -->
            <Border Height="60" 
                    VerticalAlignment="Top" 
                    Margin="0,80,0,0"
                    Background="#00000020">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    
                    <!-- Paso 1: Bienvenida -->
                    <Border Style="{StaticResource StepIndicatorStyle}">
                        <TextBlock Text="1" 
                                   Foreground="White"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    
                    <!-- Línea -->
                    <Border Style="{StaticResource StepLineStyle}" Width="100"/>
                    
                    <!-- Paso 2: Token (Actual) -->
                    <Border Style="{StaticResource StepIndicatorStyle}"
                            Background="#4FC3F7">
                        <TextBlock Text="2" 
                                   Foreground="White"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    
                    <!-- Línea -->
                    <Border Style="{StaticResource StepLineStyle}" Width="100"/>
                    
                    <!-- Paso 3: Grupo -->
                    <Border Style="{StaticResource StepIndicatorStyle}"
                            Background="#4FC3F750">
                        <TextBlock Text="3" 
                                   Foreground="#CCCCCC"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    
                    <!-- Línea -->
                    <Border Style="{StaticResource StepLineStyle}" Width="100"/>
                    
                    <!-- Paso 4: Permisos -->
                    <Border Style="{StaticResource StepIndicatorStyle}"
                            Background="#4FC3F750">
                        <TextBlock Text="4" 
                                   Foreground="#CCCCCC"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    
                    <!-- Línea -->
                    <Border Style="{StaticResource StepLineStyle}" Width="100"/>
                    
                    <!-- Paso 5: Completar -->
                    <Border Style="{StaticResource StepIndicatorStyle}"
                            Background="#4FC3F750">
                        <TextBlock Text="5" 
                                   Foreground="#CCCCCC"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Border>
            
            <!-- Contenido principal -->
            <Grid Margin="30,150,30,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Título de sección -->
                <StackPanel Grid.Row="0">
                    <TextBlock Text="Token de autenticación del Tenant"
                               Foreground="White"
                               FontSize="20"
                               FontWeight="Bold"
                               TextWrapping="Wrap"/>
                    
                    <TextBlock Text="Ingrese el token proporcionado por su administrador BWP Enterprise"
                               Foreground="#CCCCCC"
                               FontSize="14"
                               Margin="0,5,0,20"
                               TextWrapping="Wrap"/>
                </StackPanel>
                
                <!-- Formulario de token -->
                <Border Grid.Row="1" 
                        Background="#00000030" 
                        CornerRadius="8"
                        Margin="0,20,0,30"
                        Padding="30">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Campo de token -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,20">
                            <TextBlock Text="Token del Tenant:"
                                       Foreground="#4FC3F7"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>
                            
                            <TextBox x:Name="TokenTextBox"
                                     Style="{StaticResource ModernTextBox}"
                                     Height="45"
                                     FontFamily="Consolas"
                                     FontSize="13"
                                     TextChanged="TokenTextBox_TextChanged"
                                     PreviewTextInput="TokenTextBox_PreviewTextInput">
                                <TextBox.InputBindings>
                                    <KeyBinding Key="V" Modifiers="Control" Command="ApplicationCommands.Paste"/>
                                    <KeyBinding Key="C" Modifiers="Control" Command="ApplicationCommands.Copy"/>
                                </TextBox.InputBindings>
                            </TextBox>
                            
                            <TextBlock x:Name="TokenHintText"
                                       Text="Ejemplo: bwp_tenant_abcdef1234567890"
                                       Foreground="#888888"
                                       FontSize="12"
                                       Margin="5,5,0,0"
                                       Visibility="Visible"/>
                        </StackPanel>
                        
                        <!-- Botones de acción del token -->
                        <WrapPanel Grid.Row="1" 
                                   HorizontalAlignment="Left"
                                   Margin="0,0,0,20">
                            <Button x:Name="PasteTokenButton"
                                    Style="{StaticResource SecondaryButton}"
                                    Content="Pegar Token"
                                    Width="120"
                                    Margin="0,0,10,0"
                                    Click="PasteTokenButton_Click"/>
                            
                            <Button x:Name="ClearTokenButton"
                                    Style="{StaticResource SecondaryButton}"
                                    Content="Limpiar"
                                    Width="120"
                                    Margin="0,0,10,0"
                                    Click="ClearTokenButton_Click"/>
                            
                            <Button x:Name="ValidateTokenButton"
                                    Style="{StaticResource ModernButton}"
                                    Content="Validar Token"
                                    Width="120"
                                    IsEnabled="False"
                                    Click="ValidateTokenButton_Click"/>
                        </WrapPanel>
                        
                        <!-- Panel de validación -->
                        <Border x:Name="ValidationPanel"
                                Grid.Row="2"
                                Style="{StaticResource InfoPanelStyle}"
                                Visibility="Collapsed">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" 
                                            VerticalAlignment="Center"
                                            Margin="0,0,0,10">
                                    <Path x:Name="ValidationIcon"
                                          Fill="#4FC3F7"
                                          Width="20"
                                          Height="20"
                                          Margin="0,0,10,0"
                                          Stretch="Uniform">
                                        <Path.Data>
                                            <PathGeometry>
                                                <PathFigure StartPoint="0,10">
                                                    <LineSegment Point="4,14"/>
                                                    <LineSegment Point="10,4"/>
                                                </PathFigure>
                                            </PathGeometry>
                                        </Path.Data>
                                    </Path>
                                    <TextBlock x:Name="ValidationStatusText"
                                               Text="Validando token..."
                                               Foreground="White"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                                
                                <TextBlock x:Name="ValidationDetailsText"
                                           Text=""
                                           Foreground="#CCCCCC"
                                           FontSize="12"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Panel de información -->
                        <Border Grid.Row="3"
                                Style="{StaticResource InfoPanelStyle}">
                            <StackPanel>
                                <TextBlock Text="Información importante:"
                                           Foreground="#4FC3F7"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8"/>
                                
                                <TextBlock Text="• El token es único para cada organización (tenant) y se obtiene del portal de administración BWP Enterprise."
                                           Foreground="#CCCCCC"
                                           FontSize="12"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,5"/>
                                
                                <TextBlock Text="• Este token permite que el agente se autentique y se registre en su tenant específico."
                                           Foreground="#CCCCCC"
                                           FontSize="12"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,5"/>
                                
                                <TextBlock Text="• Sin un token válido, el agente no podrá conectarse a los servicios de seguridad de BWP Enterprise."
                                           Foreground="#CCCCCC"
                                           FontSize="12"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Opciones avanzadas (expandible) -->
                        <Expander Grid.Row="4"
                                  Header="Opciones avanzadas"
                                  Foreground="#4FC3F7"
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Margin="0,20,0,0"
                                  IsExpanded="False">
                            <StackPanel Margin="10,10,0,0">
                                
                                <!-- URL del servidor -->
                                <StackPanel Margin="0,0,0,15">
                                    <TextBlock Text="URL del servidor BWP:"
                                               Foreground="#CCCCCC"
                                               FontSize="13"
                                               Margin="0,0,0,5"/>
                                    
                                    <TextBox x:Name="ServerUrlTextBox"
                                             Style="{StaticResource ModernTextBox}"
                                             Height="35"
                                             FontSize="13"
                                             Text="https://api.bwp-enterprise.com">
                                        <TextBox.ToolTip>
                                            <ToolTip>
                                                <TextBlock Text="URL del servidor BWP Enterprise. No modificar a menos que se indique lo contrario."/>
                                            </ToolTip>
                                        </TextBox.ToolTip>
                                    </TextBox>
                                </StackPanel>
                                
                                <!-- Modo de conexión -->
                                <StackPanel Margin="0,0,0,15">
                                    <TextBlock Text="Modo de conexión:"
                                               Foreground="#CCCCCC"
                                               FontSize="13"
                                               Margin="0,0,0,5"/>
                                    
                                    <ComboBox x:Name="ConnectionModeComboBox"
                                              Background="#FFFFFF10"
                                              Foreground="White"
                                              BorderBrush="#4FC3F7"
                                              BorderThickness="1"
                                              Padding="10"
                                              FontSize="13"
                                              SelectedIndex="0">
                                        <ComboBoxItem Content="Directo (recomendado)"/>
                                        <ComboBoxItem Content="A través de proxy"/>
                                        <ComboBoxItem Content="Solo local (sin cloud)"/>
                                    </ComboBox>
                                </StackPanel>
                                
                                <!-- Configuración de proxy -->
                                <Border x:Name="ProxySettingsPanel"
                                        Background="#00000020"
                                        CornerRadius="4"
                                        Padding="10"
                                        Margin="0,0,0,10"
                                        Visibility="Collapsed">
                                    <StackPanel>
                                        <TextBlock Text="Configuración de proxy:"
                                                   Foreground="#CCCCCC"
                                                   FontSize="13"
                                                   Margin="0,0,0,10"/>
                                        
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <TextBlock Grid.Row="0" Grid.Column="0"
                                                       Text="Host:"
                                                       Foreground="#CCCCCC"
                                                       FontSize="12"
                                                       Margin="0,0,10,5"
                                                       VerticalAlignment="Center"/>
                                            
                                            <TextBox Grid.Row="0" Grid.Column="1"
                                                     Style="{StaticResource ModernTextBox}"
                                                     Height="30"
                                                     FontSize="12"
                                                     Margin="0,0,10,5"/>
                                            
                                            <TextBlock Grid.Row="0" Grid.Column="2"
                                                       Text="Puerto:"
                                                       Foreground="#CCCCCC"
                                                       FontSize="12"
                                                       Margin="0,0,10,5"
                                                       VerticalAlignment="Center"/>
                                            
                                            <TextBox Grid.Row="0" Grid.Column="3"
                                                     Style="{StaticResource ModernTextBox}"
                                                     Width="80"
                                                     Height="30"
                                                     FontSize="12"
                                                     Text="8080"/>
                                            
                                            <TextBlock Grid.Row="1" Grid.Column="0"
                                                       Text="Usuario:"
                                                       Foreground="#CCCCCC"
                                                       FontSize="12"
                                                       Margin="0,5,10,5"
                                                       VerticalAlignment="Center"/>
                                            
                                            <TextBox Grid.Row="1" Grid.Column="1"
                                                     Style="{StaticResource ModernTextBox}"
                                                     Height="30"
                                                     FontSize="12"
                                                     Grid.ColumnSpan="3"
                                                     Margin="0,5,0,5"/>
                                            
                                            <TextBlock Grid.Row="2" Grid.Column="0"
                                                       Text="Contraseña:"
                                                       Foreground="#CCCCCC"
                                                       FontSize="12"
                                                       Margin="0,5,10,5"
                                                       VerticalAlignment="Center"/>
                                            
                                            <PasswordBox x:Name="ProxyPasswordBox"
                                                         Grid.Row="2" Grid.Column="1"
                                                         Background="#FFFFFF10"
                                                         Foreground="White"
                                                         BorderBrush="#4FC3F7"
                                                         BorderThickness="1"
                                                         Padding="10"
                                                         FontSize="12"
                                                         Grid.ColumnSpan="3"
                                                         Margin="0,5,0,0"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Checkbox para certificados auto-firmados -->
                                <CheckBox x:Name="AcceptSelfSignedCertCheckBox"
                                          Content="Aceptar certificados auto-firmados"
                                          Foreground="#CCCCCC"
                                          FontSize="12"
                                          Margin="0,10,0,0"/>
                                
                            </StackPanel>
                        </Expander>
                    </Grid>
                </Border>
                
                <!-- Botones de navegación -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Botón de retroceso -->
                    <Button x:Name="BackButton"
                            Grid.Column="0"
                            Style="{StaticResource SecondaryButton}"
                            Content="← Anterior"
                            Width="120"
                            HorizontalAlignment="Left"
                            Click="BackButton_Click"/>
                    
                    <!-- Botones de siguiente -->
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Button x:Name="SkipTokenButton"
                                Style="{StaticResource SecondaryButton}"
                                Content="Saltar por ahora"
                                Width="140"
                                Margin="0,0,10,0"
                                ToolTip="Configurar el token más tarde desde la consola de administración"
                                Click="SkipTokenButton_Click"/>
                        
                        <Button x:Name="NextButton"
                                Style="{StaticResource ModernButton}"
                                Content="Siguiente →"
                                Width="120"
                                IsEnabled="False"
                                Click="NextButton_Click"/>
                    </StackPanel>
                </Grid>
            </Grid>
            
            <!-- Barra de progreso -->
            <Border x:Name="ProgressBarContainer"
                    Height="4"
                    VerticalAlignment="Bottom"
                    Background="#00000020">
                <Rectangle x:Name="ProgressBar" 
                           HorizontalAlignment="Left" 
                           Width="200"
                           Fill="#4FC3F7"
                           RadiusX="2" 
                           RadiusY="2">
                    <Rectangle.Triggers>
                        <EventTrigger RoutedEvent="Rectangle.Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Width"
                                                     From="0"
                                                     To="200"
                                                     Duration="0:0:0.5"
                                                     FillBehavior="HoldEnd"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Rectangle.Triggers>
                </Rectangle>
            </Border>
            
            <!-- Close button -->
            <Button x:Name="CloseButton"
                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                    Width="30" 
                    Height="30"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"
                    Margin="0,15,15,0"
                    Click="CloseButton_Click">
                <Path Fill="#CCCCCC" 
                      Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12z"/>
            </Button>
            
            <!-- Loading overlay -->
            <Border x:Name="LoadingOverlay"
                    Background="#80000000"
                    Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Border Width="50" 
                            Height="50" 
                            CornerRadius="25"
                            BorderBrush="#4FC3F7"
                            BorderThickness="3">
                        <Border.RenderTransform>
                            <RotateTransform x:Name="LoadingSpinnerTransform"/>
                        </Border.RenderTransform>
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="Border.Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="LoadingSpinnerTransform"
                                                         Storyboard.TargetProperty="Angle"
                                                         From="0" To="360" 
                                                         Duration="0:0:1"
                                                         RepeatBehavior="Forever"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                    </Border>
                    <TextBlock Text="Validando token..."
                               Foreground="White"
                               FontSize="14"
                               Margin="0,20,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>